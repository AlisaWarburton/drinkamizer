<%= stylesheet_link_tag 'drink_show', :media => "all" %>

<h1>Drink詳細</h1>
<div class="drink">
  <p><%= image_tag @drink.image_url, size: "250x200" if @drink.image? %></p>
 <h3>Name</h3>
  <p><%= @drink.name %></p>
 <h3>Shop</h3>
  <p><%= @drink.shop %></p>
 <h3>Base</h3>
  <p><%= @drink.base %></p>
 <h3>About</h3>
  <p><%= @drink.about %></p>
 <h3>Recipe</h3>
  <p><%= @drink.recipe %></p>
 <h3>Created At</h3>
  <p><%= @drink.created_at %></p>

  <% if user_signed_in? && current_user.id == @drink.user_id %>
    <%= button_to "Delete", drink_path(@drink.id), method: :delete %>
  <% end %>

  <% if user_signed_in? %>
  <% if current_user.already_liked?(@drink) %>
      <%= link_to drink_like_path(@drink), method: :delete do %>
         <p>いいねを取り消す</p><%= @drink.likes.count %>
      <% end %>
  <% else %>
      <%= link_to drink_likes_path(@drink), method: :post do %>
         <p>いいね</p><%= @drink.likes.count %>
      <% end %>
  <% end %>
<% else %>
  <i class="far fa-heart"></i><%= @drink.likes.count %>
<% end %>

</div>

<h1>Likes</h1>
<% @drink.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<div class="comment-wrapper">
  <h1>Comments</h1>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@drink, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "Drink一覧に戻る", drinks_path %>
<%= link_to "編集する", edit_drink_path(@drink.id) %>