<%= stylesheet_link_tag 'sign_up', :media => "all" %>

<div class="sign_up">
  <br>
  <h2>Sign up</h2>
  <div class="sign_up_info">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="sign_up_avatar">
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
      </div>

      <div class="sign_up_nickname">
        <%= f.label :nickname %><br />
        <%= f.email_field :nickname, autofocus: true %>
      </div>

      <div class="sign_up_email">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="sign_up_password">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="sign_up_password_confimation">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="sign_up_actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "users/shared/links" %>
